{
  "ide": {
    "enabled": true
  },
  "context": {
    "fileName": [
      "AGENTS.md"
    ]
  },
  "tools": {
    "autoAccept": true,
    "allowed": [
      "run_shell_command(cat)",
      "run_shell_command(ls)",
      "run_shell_command(Get-ChildItem)",
      "run_shell_command(gh issue list)",
      "run_shell_command(gh issue status)",
      "run_shell_command(gh issue view)",
      "run_shell_command(gh pr checks)",
      "run_shell_command(gh pr diff)",
      "run_shell_command(gh pr list)",
      "run_shell_command(gh pr status)",
      "run_shell_command(gh pr view)",
      "run_shell_command(gh release list)",
      "run_shell_command(gh release view)",
      "run_shell_command(gh repo list)",
      "run_shell_command(gh repo view)",
      "run_shell_command(gh run list)",
      "run_shell_command(gh run view)",
      "run_shell_command(gh run watch)",
      "run_shell_command(gh workflow list)",
      "run_shell_command(git branch --show-current)",
      "run_shell_command(git branch -a)",
      "run_shell_command(git describe)",
      "run_shell_command(git diff)",
      "run_shell_command(git log)",
      "run_shell_command(git show)",
      "run_shell_command(git status)",
      "run_shell_command(uv run pytest)",
      "run_shell_command(uv run python -m cam_head_tracker.main)",
      "run_shell_command(uv run ruff)",
      "run_shell_command(repomix)"
