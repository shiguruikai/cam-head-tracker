{
  "ide": {
    "enabled": true
  },
  "context": {
    "fileName": [
      "AGENTS.md"
    ]
  },
  "tools": {
    "autoAccept": true,
    "allowed": [
      "run_shell_command(ls)",
      "run_shell_command(Get-ChildItem)",
      "run_shell_command(git status)",
      "run_shell_command(git log)",
      "run_shell_command(git show)",
      "run_shell_command(git branch -a)",
      "run_shell_command(git diff)",
      "run_shell_command(uv run ruff)",
      "run_shell_command(uv run pytest)",
      "run_shell_command(uv run python -m cam_head_tracker.main)",
      "run_shell_command(repomix)"
    ]
  },
  "ui": {
    "showMemoryUsage": true,
    "showModelInfoInChat": true,
    "footer": {
      "hideContextPercentage": false
    }
  }
}
